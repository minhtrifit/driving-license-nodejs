<div class="right-content">
    <div class="top">
        <h3 style="text-align: center; font-weight: bold; margin-top: 20px;">NỘI DUNG THI TRẮC NGHIỆM</h3>
        <div class="banner">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Giấy phép lái xe</th>
                        <th>Số câu hỏi</th>
                        <th>Thời gian làm bài (phút)</th>
                        <th>Đạt yêu cầu (câu)</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each license }}
                    <tr>
                        <th>{{ @index }}</th>
                        <td>Hạng {{ level }}</td>
                        <td>{{ amount }}</td>
                        <td>{{ time }}</td>
                        <td>{{ require }}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="middle">
        <p style="font-size: 25px; font-weight: bold; margin-left: 20px;">Danh sách tài liệu:</p>
        <div class="wrapper">
            {{#each license}}
            <a href="/document/{{ level }}">
                <div class="card">
                    <img src="image/document/{{ level }}.png" alt="">
                    <div class="info">
                        <p>Tài liệu {{ name }}</p>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>
</div>